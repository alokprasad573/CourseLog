<%- include('partials/header') %>
<div class="max-w-xl mx-auto mt-10 bg-white p-6 rounded shadow">
    <h2 class="text-2xl font-bold text-blue-700 mb-4 text-center">Edit Student</h2>
    <form method="POST" action="/dashboard/update/<%= student._id %>" class="space-y-4">
        <input name="name" value="<%= student.name %>" required
               class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-300" />
        <input name="course" value="<%= student.course %>" required
               class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-300" />
        <input name="age" type="number" value="<%= student.age %>" required
               class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-300" />
        <input name="city" value="<%= student.city %>"
               class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-300" />
        <button class="w-full bg-blue-500 text-white py-2 rounded hover:bg-blue-600 transition duration-200">
            Update Student
        </button>
    </form>
</div>
<%- include('partials/footer') %>